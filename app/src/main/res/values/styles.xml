<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">

    <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorWhite</item>
    </style>

    <!-- BottomMenu theme. -->
    <style name="BottomMenuTheme" parent="Theme.MaterialComponents.Light.NoActionBar">

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <!-- Base EditText theme -->
    <style name="EditTextTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="colorControlNormal">@color/colorGreyAccent</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>
    </style>

    <style name="TextLabel" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/colorGreyAccent</item>
        <item name="android:textSize">20sp</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="colorControlNormal">@color/colorGreyAccent</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>

    <style name="DatePickerLight" parent="@android:style/Theme.Holo.Light.Dialog">
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="colorControlNormal">@color/colorGreyAccent</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>

    <style name="ButtonLayout" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="colorControlNormal">@color/colorGreyAccent</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>


</resources>
